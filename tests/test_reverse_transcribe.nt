test_make_combos:
  -
    id: base
    group:
      key:
        no_rt_control: False
      members:
        -
          template: 'f1'
          primer: 'o1'
        -
          template: 'f2'
          primer: 'o2'
    reaction:
      > Reaction.from_text("""\
      > Reagent       Flags  Volume
      > ============  =====  ======
      > template RNA           1 µL
      > primer                 1 µL
      > enzyme        RT       2 µL
      > """)
    expected:
      -
        template RNA: 'f1'
        primer: 'o1'
      -
        template RNA: 'f2'
        primer: 'o2'
  -
    id: no-rt-control
    group:
      key:
        no_rt_control: True
      members:
        -
          template: 'f1'
          primer: 'o1'
        -
          template: 'f2'
          primer: 'o2'
    reaction:
      > Reaction.from_text("""\
      > Reagent       Flags  Volume
      > ============  =====  ======
      > template RNA           1 µL
      > primer                 1 µL
      > enzyme        RT       2 µL
      > """)
    expected:
      -
        template RNA: 'f1'
        primer: 'o1'
        enzyme: '+'
      -
        template RNA: 'f1'
        primer: 'o1'
        enzyme: '−'
      -
        template RNA: 'f2'
        primer: 'o2'
        enzyme: '+'
      -
        template RNA: 'f2'
        primer: 'o2'
        enzyme: '−'
  -
    id: no-rt-control-names
    group:
      key:
        no_rt_control: True
      members:
        -
          template: 'f1'
          primer: 'o1'
    reaction:
      > Reaction.from_text("""\
      > Reagent       Flags  Volume
      > ============  =====  ======
      > template RNA           1 µL
      > primer                 1 µL
      > enzyme        RT       2 µL
      > """)
    kwargs:
      rt_controls:
        - 'denatured'
        - 'active'
    expected:
      -
        template RNA: 'f1'
        primer: 'o1'
        enzyme: 'denatured'
      -
        template RNA: 'f1'
        primer: 'o1'
        enzyme: 'active'
  -
    id: no-primers
